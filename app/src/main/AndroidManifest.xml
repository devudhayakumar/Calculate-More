<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dev.udhayakumar.calculator">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/AppTheme.Fullscreen">
        </activity>
        <activity
            android:name=".DiscountCalculator"
            android:exported="true"
            android:label="Discount Calculator"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity
            android:name=".DateCalculator"
            android:exported="false"
            android:label="Date Calculator"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".BmiCalculator"
            android:exported="false"
            android:label="Bmi Calculator"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".WordsCalculator"
            android:exported="true"
            android:label="Words and letters Calculator"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".GstCalculator"
            android:exported="false"
            android:label="GST Calculator"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".percentageCalculator"
            android:exported="false"
            android:label="Percentage Calculator"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CgpaCalculator"
            android:exported="false"
            android:label="CGPA Calculator"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AgeCalculator"
            android:exported="false"
            android:label="Age Calculator"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>